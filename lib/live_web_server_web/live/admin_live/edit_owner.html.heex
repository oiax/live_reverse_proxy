<tr>
  <td colspan="4" class="bg-gray-400">
    <.form :let={f} for={@changeset} class="flex justify-start gap-2" phx-submit="update_owner">
      <div>
        <.input field={f[:name]} class="input" label="Name" />
      </div>
      <div class="flex items-end gap-2">
        <button type="button" class="btn btn-neutral" phx-click="cancel">Cancel</button>
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
    </.form>
  </td>
</tr>
